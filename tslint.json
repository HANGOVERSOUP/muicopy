{
    "defaultSeverity": "error",
    "extends": [],
    "jsRules": {},
    "rules": {
        "comment-format": [true, "check-space"],
        "expect": true,
        "file-name-casing": true,
        "interface-name": [true, "never-prefix"],
        "member-access": [true, "no-public"],
        "no-unnecessary-callback-wrapper": true,
        "no-unnecessary-type-assertion": true,
        "semicolon": [true, "always", "ignore-bound-class-methods"],
        "space-within-parens": true,
        "strict-export-declare-modifiers": true,
        "no-relative-import-in-test": true,
        "use-default-type-parameter": true,
        // This can be tricky in most cases and doesn't hurt if it is done one to many
        "no-unnecessary-generics": false,
        "prefer-declare-function": true,
        "interface-over-type-literal": true
    },
    "rulesDirectory": [
        "./node_modules/dtslint/bin/rules"
    ]
}