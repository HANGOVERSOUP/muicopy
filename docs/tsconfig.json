{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "types",
    "src",
    "pages",
    "data",
    "next.config.js"
  ],
  "exclude": [
    "node_modules",
    "export"
  ]
}
