{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "baseUrl": "../../../",
    "noErrorTruncation": true,
    "paths": {
      "@mui/material": ["./material-ui/src"],
      "@mui/material/*": ["./material-ui/src/*"],
      "@material-ui/icons": ["./material-ui-icons/build"],
      "@material-ui/icons/*": ["./material-ui-icons/build/*"]
    }
  },
  "exclude": ["**/node_modules/"]
}
