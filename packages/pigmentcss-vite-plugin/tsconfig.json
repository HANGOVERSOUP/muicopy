{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "paths": {
      "@babel/core": ["./node_modules/@babel/core"],
      "@mui/system": ["./packages/mui-system/src"],
      "@mui/system/*": ["./packages/mui-system/src/*"],
      "@mui/utils": ["./packages/mui-utils/src"],
      "@mui/utils/*": ["./packages/mui-utils/src/*"],
      "@pigmentcss/react": ["./packages/pigmentcss-react/src"],
      "@pigmentcss/react/*": ["./packages/pigmentcss-react/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["./tsup.config.ts"]
}
